<Window x:Class="VaccinationCenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaccinationCenter"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FFE63070" Offset="1" />
                <GradientStop Color="#FFFE8704" Offset="0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Border Height="700" VerticalAlignment="Top" CornerRadius="0 0 180 0" Background="#FF4A426E" Grid.RowSpan="2" >
        </Border>
        <StackPanel Width="Auto">
            <Label x:Name="DataGrid_Lable" Content="Available Clinics" HorizontalAlignment="Center" Width="643" VerticalContentAlignment="Top" FlowDirection="LeftToRight" Padding="4,7,4,4" FontSize="30" FontFamily="Great Vibes" Foreground="#DDFDFDFD"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.RowSpan="1">
            <StackPanel Width="600">
                <DataGrid x:Name="dataGrid" BorderThickness="3" Height="400" Margin="20,50,0,5" Width="600" SelectionChanged="dataGrid_SelectionChanged"/>
            </StackPanel>
            <StackPanel Width="Auto">
                <StackPanel Margin="30,40,40,40">
                    <TextBlock Text="User Details" Margin="20" Foreground="White" TextAlignment="Center" FontSize="40" FontFamily="Great Vibes"></TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="30,10,10,10">
                        <TextBox x:Name="txtLocationName" Height="40" Margin="10 0" Text="{Binding UserName}"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Username" Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,10,10,10">
                        <TextBox x:Name="txtPostalcode" Height="40" Margin="10 0" Text="{Binding Postal Code}"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Postal Code" Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,10,10,10">
                        <TextBox x:Name="txtAge" Height="40" Margin="10 0" Text="{Binding Birth Year}"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Birth Year" Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,10,10,10">
                        <ComboBox Margin="10 0"  Style="{StaticResource MaterialDesignFloatingHintComboBox}" materialDesign:HintAssist.Hint="Vaccine" Text="{Binding Vaccine}" Foreground="White" Width="250" BorderBrush="White" >
                            <ComboBoxItem Content="AsterZenica"/>
                            <ComboBoxItem Content="Medorna"/>
                            <ComboBoxItem Content="JohnsonsnJohnsons"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,10,10,10">
                        <ComboBox Margin="10 0"  Style="{StaticResource MaterialDesignFloatingHintComboBox}" materialDesign:HintAssist.Hint="Vaccine Dose" Text="{Binding Vaccine Dose}" Foreground="White" Width="250" BorderBrush="White" >
                            <ComboBoxItem Content="First Dose"/>
                            <ComboBoxItem Content="Second Dose"/>
                         </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,10,10,10">
                        <ComboBox Margin="10 0"  Style="{StaticResource MaterialDesignFloatingHintComboBox}" materialDesign:HintAssist.Hint="Health Insurance" Text="{Binding Health Insurance}" Foreground="White" Width="250" BorderBrush="White" >
                            <ComboBoxItem Content="AsterZenica"/>
                            <ComboBoxItem Content="Medorna"/>
                            <ComboBoxItem Content="JohnsonsnJohnsons"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="30,10,10,10">
                        <materialDesign:PackIcon Kind="IdCard" Width="35" Height="35" Foreground="White"/>
                        <TextBox x:Name="txtID" Margin="10 0" materialDesign:HintAssist.Hint="Enter Capacity"  Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" />
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </StackPanel>
      
           
            <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                        materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                        Foreground="White" ToolTip="Deleted the record" x:Name="btnDelete"  Content="Delete Record" RenderTransformOrigin="1.46,1.568" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="476,88,380,161" Grid.Row="1"/>
            <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                        materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                        Foreground="White" ToolTip="Clear Recod" x:Name="btnClear"  Content="Clear Record" RenderTransformOrigin="0.5,2.158" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FlowDirection="LeftToRight" Margin="656,88,210,161" Grid.Row="1"/>
            <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                        materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                        Foreground="White" ToolTip="Update user record" x:Name="UpdateRecord_btn"  Content="Update Record" RenderTransformOrigin="1.46,1.568" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="300,88,552,161" Grid.Row="1"/>
            <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                        materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                        Foreground="White" ToolTip="Insert the record" x:Name="InserButn"  Content="Insert Record" RenderTransformOrigin="1.46,1.568" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="130,88,722,161" Grid.Row="1"/>
       
    </Grid>
</Window>
