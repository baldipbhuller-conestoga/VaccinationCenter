<Window x:Class="VaccinationCenter.AdminScreen_ClinicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaccinationCenter"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="550*"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FFE63070" Offset="1" />
                <GradientStop Color="#FFFE8704" Offset="0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Border Height="550" VerticalAlignment="Top" CornerRadius="0 0 180 0" Background="#FF4A426E" Grid.RowSpan="2" >
        </Border>
        <StackPanel Orientation="Horizontal" Grid.RowSpan="1">
            <StackPanel Width="500">
                <DataGrid x:Name="dataGrid" BorderThickness="3" Height="400" Margin="20,20,0,5" Padding="0,6,0,0"/>
            </StackPanel>
            <StackPanel Width="Auto">
                <StackPanel Margin="30,28,40,40">
                    <TextBlock Text="Clinics" Margin="10" Foreground="White" TextAlignment="Center" FontSize="40" FontFamily="Great Vibes"></TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="50,10,10,10">
                        <materialDesign:PackIcon Kind="Location" Width="35" Height="35" Foreground="White"/>
                        <TextBox x:Name="txtLocationName" Margin="10 0" materialDesign:HintAssist.Hint="Enter Clinic Address" Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="50,10,10,10">
                        <materialDesign:PackIcon Kind="City" Width="35" Height="35" Foreground="White"/>
                        <ComboBox x:Name="City_combobox" Style="{StaticResource MaterialDesignFloatingHintComboBox}" materialDesign:HintAssist.Hint="City" Text="{Binding City}" Margin="10 0"  Foreground="White" Width="250" BorderBrush="White" >
                            <ComboBoxItem Content="Woodstock"/>
                            <ComboBoxItem Content="Waterloo"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="50,10,10,10">
                        <materialDesign:PackIcon Kind="PostageStamp" Width="35" Height="35" Foreground="White"/>
                        <TextBox x:Name="txtPostalCode" Margin="10 0" materialDesign:HintAssist.Hint="Postal Code N2L3W6" Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="50,10,10,10">
                        <materialDesign:PackIcon Kind="HumanCapacityIncrease" Width="35" Height="35" Foreground="White"/>
                        <TextBox x:Name="txtTotalCapacity" Margin="10 0" materialDesign:HintAssist.Hint="Enter Clinic ID"  Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448"  />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="50,10,10,10">
                        <materialDesign:PackIcon Kind="IdCard" Width="35" Height="35" Foreground="White"/>
                        <TextBox x:Name="txtID" Margin="10 0" materialDesign:HintAssist.Hint="Enter Capacity"  Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" />
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                    materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                    Foreground="White" ToolTip="Delete Clinic" x:Name="btn_Delete"  Content="Delete Record" RenderTransformOrigin="1.46,1.568" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="417,52,459,109" Grid.Row="1"/>
        <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                    materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                    Foreground="White" ToolTip="Clear record" x:Name="btnClear"  Content="Clear Record" RenderTransformOrigin="0.5,2.158" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FlowDirection="LeftToRight" Margin="584,52,302,109" Grid.Row="1"/>
        <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                    materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                    Foreground="White" ToolTip="Update record" x:Name="Update_btn"  Content="Update Record" RenderTransformOrigin="1.46,1.568" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="238,52,632,109" Grid.Row="1"/>
        <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                    materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                    Foreground="White" ToolTip="Insert clinic records" x:Name="InserButn"  Content="Insert Record" RenderTransformOrigin="1.46,1.568" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="72,52,807,109" Grid.Row="1"/>
        <Button Height="45" Style="{StaticResource MaterialDesignRaisedButton}" 
                        materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" 
                        Foreground="White" ToolTip="Exit" x:Name="btnExit"  Content="Exit" RenderTransformOrigin="1.46,1.568" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="760,52,96,109" Grid.Row="1" FontSize="16" Click="btnExit_Click"/>

    </Grid>
</Window>
